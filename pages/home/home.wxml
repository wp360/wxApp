<!--pages/home/home.wxml-->
<l-loadmore show type="{{loadingType}}" end-text="到底啦！">
  <view slot="content" class="container">
    <image class="top-theme" src="{{themeA.entrance_img}}"></image>
    <swiper class="swiper" indicator-dots indicator-active-color="#157658" autoplay circular>
      <block wx:for="{{bannerB.items}}" wx:key="id">
        <swiper-item>
          <image class="swiper" src="{{item.img}}"></image>
        </swiper-item>
      </block>
    </swiper>
    <s-category-grid grid="{{grid}}"></s-category-grid>
    <!-- 优惠券 -->
    <image class="activity" src="{{activity.entrance_img}}"></image>
    <!-- 每周上新 -->
    <s-spu-scroll
      wx:if="{{themeE.online}}"
      theme="{{themeE}}"
      spu-list="{{themeESpu}}"
      l-class="spu-scroll"
    >
    </s-spu-scroll>
    <!-- 臻选 -->
    <image src="{{themeF.entrance_img}}" class="quality"></image>
    <!-- 热卖榜单 -->
    <s-hot-list banner="{{hotList}}"></s-hot-list>
    <!-- 时尚出街 -->
    <image src="{{themeH.entrance_img}}" class="fashion"></image>
    <!-- 瀑布流 -->
    <view class="spu-bottom">
      <image class="title-spu-bottom" src="/imgs/home/title@interest.png"></image>
      <l-water-flow generic:l-water-flow-item="s-spu-preview"></l-water-flow>
    </view>
  </view>
</l-loadmore>