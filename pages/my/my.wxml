<!--pages/my/my.wxml-->
<view class="container">
  <image class="bg" src="/images/my/my@bg.png"></image>
  <!-- <open-data type="userAvatarUrl" class="avatar avatar-position" /> -->
  <v-button wx:if="{{!authorized}}" open-type="getUserInfo" class="avatar-position" bind:getuserinfo="onGetUserInfo">
    <image class="avatar" slot="img" src="/images/my/my.png" />
  </v-button>
  <view wx:if="{{authorized}}" class="avatar-container avatar-position">
    <image class="avatar" src="{{userInfo.avatarUrl}}" />
    <text>{{userInfo.nickName}}</text>
  </view>
  <view class="about-container">
    <view bind:tap="onJumpToAbout" class="about-us">
      <image src="/images/my/about.png" />
      <text class="description">关于我们</text>
    </view>
    <view class="about-us">
      <text class="book-num">{{bookCount}}</text>
      <text class="description">喜欢的书</text>
    </view>
    <!-- 获取用户信息  -->
    <!-- 如何获取 改版 -->
    <!-- 用户授权 -->
    <!-- 不需要授权方法 open-data组件 -->
  </view>
  <view class="like-container">
    <image class="headline" src="/images/my/like.png" />
    <view class="preview-container">
      <block wx:for="{{classics}}" wx:key="">
        <v-preview bind:tapping="onJumpToDetail" class="preview" classic="{{item}}" />
      </block>
    </view>
  </view>
  <!-- <button open-type="getUserInfo" bindgetuserinfo="getUserInfo">授权</button> -->
</view>
<image bind:tap="onStudy" class="study" src="/images/my/study.png" />
