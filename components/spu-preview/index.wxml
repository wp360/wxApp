<!--components/spu-preview/index.wxml-->
<!--引入价格wxs-->
<wxs src="../../wxs/price.wxs" module="p"></wxs>

<view class="container">
  <image class="img" src="{{data.img}}"></image>
  <view class="content-container">
    <text class="title">
      {{data.title}}
    </text>
    <view class="tags">
      <block wx:for="{{tags}}" wx:key="index">
        <l-tag l-class="l-tag" size="mini">{{item}}</l-tag>
      </block>
    </view>
    <!-- 原价 -->
    <l-price value="{{p.mainPrice(data.price, data.discount_price).price}}"></l-price>
    <!-- 折扣价 -->
    <l-price
      wx:if="{{p.slashedPrice(data.price, data.discount_price).display}}"
      deleted
      value="{{p.slashedPrice(data.price, data.discount_price).price}}">
    </l-price>
    <text>{{data.subtitle}}</text>
  </view>
</view>
